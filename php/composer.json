{
  "name": "text-processing-kata/php",
  "description": "Initial code to start TDD katas",
  "require": {
    "php": "^7.3|^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9"
  },
  "autoload": {
    "psr-4": {
      "TextProcessingKata\\": "src",
      "TextProcessingKataTests\\": "tests"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit",
    "test-coverage": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --coverage-html coverage"
  }
}
